{% extends 'base.html.twig' %}

{% block title %}Liste des prestations{% endblock %}

{% block body %}
    <h1>Liste des prestations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Email</th>
                <th>Message</th>
                <th>Title</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestation in prestations %}
            <tr>
                <td>{{ prestation.id }}</td>
                <td>{{ prestation.startDate ? prestation.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ prestation.endDate ? prestation.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ prestation.email }}</td>
                <td>{{ prestation.message }}</td>
                <td>{{ prestation.title }}</td>
                <td>{{ prestation.comment }}</td>
                <td>
                    <a href="{{ path('prestation_show', {'id': prestation.id}) }}">Montrer</a>
                    <a href="{{ path('prestation_edit', {'id': prestation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prestation_new') }}">Nouveau</a>
{% endblock %}
