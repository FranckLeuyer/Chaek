{% extends 'base.html.twig' %}

{% block title %}Liste des objets de prestation{% endblock %}

{% block body %}
    <h1>Liste des objets de prestation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestation_object in prestation_objects %}
            <tr>
                <td>{{ prestation_object.id }}</td>
                <td>{{ prestation_object.description }}</td>
                <td>
                    <a href="{{ path('prestation_object_show', {'id': prestation_object.id}) }}">Montrer</a>
                    <a href="{{ path('prestation_object_edit', {'id': prestation_object.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prestation_object_new') }}">Nouveau</a>
{% endblock %}
